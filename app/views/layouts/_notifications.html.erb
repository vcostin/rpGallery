<div class="row">
  <div class="medium-12 notification-alert --holder">
    <div class="notification-alert --stash">
      <% if notice %>
        <div data-alert class="alert-box success radius">
          <%= notice %>
          <a href="#" class="close">&times;</a>
        </div>
      <% end %>

      <% if alert %>
        <div data-alert class="alert-box alert radius">
          <%= alert %>
          <a href="#" class="close">&times;</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
